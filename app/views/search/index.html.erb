<% title "Search - Libraries" %>

<div class='row'>
  <div class='col-md-8'>
    <h3>
      <% if params[:license].present? %>
      <%= params[:license] %>
      <% end %>
      Projects
      <% if params[:platform].present? %>
      on <%= params[:platform] %>
      <% end %>
      <% if params[:q].present? %>
      matching "<%= params[:q] %>"
      <% end %>
    </h3>

    <% if @projects.any? %>
      <p>
        <%= page_entries_info @projects %>
      </p>
      <%= render @projects %>
      <p>
        <%= page_entries_info @projects %>
      </p>
      <%= will_paginate @projects, renderer: BootstrapPagination::Rails, page_links: false %>
    <% else %>
      <p>
        No projects found
      </p>
    <% end %>
  </div>

  <div class='col-md-4'>
    <% @projects.facets.each do |facet| %>
      <h4><%= facet_name facet[0] %></h4>
      <ul>
        <% facet[1]['terms'].each do |term| %>
          <% active = term['term'] == params[facet_param(facet[0]).to_sym] %>
          <li class='<%= 'active' if active %>'>
            <% if active %>
              <%= link_to term['term'], url_for(params.merge(facet_param(facet[0]).to_sym => nil)) %>
            <% else %>
              <%= link_to term['term'], url_for(params.merge(facet_param(facet[0]).to_sym => term['term'])) %>
            <% end %>
            - <%= term['count'] %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
