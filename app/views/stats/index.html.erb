<% title 'Stats - Libraries' %>
<h1>Stats</h1>

<div class="row">
  <div class="col-md-4">
    <h4>Projects
      <small><%= number_with_delimiter Project.count %></small>
    </h4>

    <table class='table table-striped table-hover'>
      <% @new_projects.each do |date,count| %>
        <tr>
          <td>
            <%= date.to_s(:long) %>
          </td>
          <td>
            <%= number_with_delimiter count %>
          </td>
        </tr>
      <% end %>
    </table>

  </div>
