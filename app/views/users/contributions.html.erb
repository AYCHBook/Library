<% title "#{@user}'s Open Source Contributions - Libraries.io" %>

<h1>
  <%= image_tag @user.avatar_url(120), width: 60, height: 60, alt: @user %>
  <%= link_to @user, user_path(@user) %>'s Open Source Contributions
</h1>
<hr>

<div class="row">
  <div class="col-sm-8">
    <%= render 'adsense/banner' %>
    <% if @contributions.any? %>
      <%= render @contributions.map(&:github_repository), cache: true  %>
      <%= will_paginate @contributions, page_links: false %>
      <%= render 'adsense/banner' %>
    <% else %>
      <p>
        No projects found, go back to <%= link_to @user, user_path(@user) %>.
      </p>
    <% end %>
  </div>
  <div class="col-sm-4">
    <%= render 'adsense/sidebar' %>
  </div>
</div>
