<% title "Repositories forked from #{@github_repository} - Libraries" %>

<h1>Repositories forked from <%= link_to @github_repository.full_name, github_repository_path(@github_repository.owner_name, @github_repository.project_name) %></h1>
<hr>
<% if @forks.any? %>
  <%= render @forks %>
  <%= will_paginate @forks, renderer: BootstrapPagination::Rails, page_links: false %>
<% else %>
  <p>
    No repositories found, go back to <%= link_to @github_repository.full_name, github_repository_path(@github_repository.owner_name, @github_repository.project_name) %>.
  </p>
<% end %>
