<div class="row">
  <div class="col-md-12">
    <h1>
      <%= link_to image_tag(@github_repository.avatar_url, width: 50, height: 50, alt: @github_repository), user_path(@github_repository.owner_name) %>
      <%= link_to @github_repository.full_name, github_repository_path(@github_repository.owner_name, @github_repository.project_name) %> -
      Web Hooks
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <% if @web_hooks.any? %>
      <table class='table' id='web_hooks'>
        <tr>
          <th>
            URL
          </th>
          <th>
            Last Sent
          </th>
          <th>
            Last Response
          </th>
          <th>
            
          </th>
        </tr>
        <%= render @web_hooks %>
      </table>
      <%= will_paginate @repos, renderer: BootstrapPagination::Rails, page_links: false %>
    <% else %>
      <p>
        No web hooks added to this repositories yet.
      </p>
    <% end %>
  </div>
  <div class="col-md-4">
    <p class='text-center'>
      <%= link_to 'Add a web hook', new_github_repository_web_hook_path(@github_repository.owner_name, @github_repository.project_name), class: 'btn btn-primary' %>
    </p>
  </div>
</div>
