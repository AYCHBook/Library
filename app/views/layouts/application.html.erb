    ga('create', 'UA-265870-38', 'auto');
  </script>
</head>
<body>
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to image_tag('logo.svg'), root_path, class: 'navbar-brand' %>
      </div>
      <div class="navbar-collapse collapse" id="navbar-main">
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= image_tag current_user.avatar_url(40), width: 20 %> Account <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Subscriptions', subscriptions_path %></li>
                <li><%= link_to 'Settings', account_path %></li>
                <li><%= link_to 'Logout', logout_path %></li>
              </ul>
            </li>
          <% end %>
          <li>
            <%= form_tag search_path, method: :get, class: 'navbar-form', enforce_utf8: false do |f| %>
              <div class="input-group input-group">
                <%= text_field_tag 'q', '', placeholder: 'Search..', class: 'form-control', size: 40 %>
                <span class="input-group-btn">
                  <button class="btn btn-primary" type="submit">Search</button>
                </span>
              </div>
            <% end %>
          </li>
        </ul>
        <%= link_to('Login with GitHub', login_path(return_to: request.original_url), class: 'pull-right btn btn-success navbar-btn', rel: 'nofollow') unless logged_in? %>
      </div>
    </div>
  </div>

  <div class="container">
    <%= render 'shared/flash' %>
    <%= yield %>
  </div>
  <footer>
    <div class="container">
      <div class='row'>
        <div class="col-xs-12 col-sm-6 col-md-7">
            <p>
              <%= link_to 'Libraries', root_path %> helps you find new open source libraries, modules and frameworks and keep track of ones you depend upon.
            </p>
            <p>
              Currently tracking <%= link_to number_with_delimiter(Project.total), search_path %> open source projects
              from across <%= link_to Download.platforms.length, platforms_path %> platforms.
            </p>
            <p>
              <%= link_to 'About', '/about' %> -
              <%= link_to 'Support', 'https://github.com/librariesio/support/issues/new' %> -
              <%= link_to 'Twitter', 'https://twitter.com/librariesio' %> -
              <%= link_to 'GitHub', 'https://github.com/librariesio' %> -
              <%= link_to 'Contact', 'mailto:support@libraries.io' %> -
              <%= link_to 'Increase the Bus Factor', bus_factor_path %>
            </p>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-5">
          <form action="//libraries.us10.list-manage.com/subscribe/post?u=15c11768c94674bc6f18d079f&amp;id=848ac04a44" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="navbar-form" target="_blank" novalidate>
            <p>
              Subscribe to the Libraries newsletter:
            </p>
          	<input type="email" value="" name="EMAIL" size='40' placeholder='Your email...' class="form-control" id="mce-EMAIL">
            <div style="position: absolute; left: -5000px;"><input type="text" name="b_15c11768c94674bc6f18d079f_848ac04a44" tabindex="-1" value=""></div>
            <input type="submit" value="Get Updates" name="subscribe" id="mc-embedded-subscribe" class="btn btn-primary"></div>
          </form>
        </div>
      </div>
    </div>
  </footer>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <% if Rails.env.production? %>
    <script>ga('send', 'pageview');</script>
  <% end %>
</body>
</html>
