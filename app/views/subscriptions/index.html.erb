<div class="row">
  <div class="col-md-8">
    <h1>Subscriptions</h1>
    <% if @subscriptions.any? %>
      <table class='table table-striped table-hover'>
        <%= render @subscriptions %>
      </table>
      <%= will_paginate @subscriptions, renderer: BootstrapPagination::Rails, page_links: false %>
    <% else %>
      <p>
        Libraries lets you watch libraries that you depend on and notifies you by email when there's a new release.
      </p>
      <h4>
        Most watched Projects
      </h4>
      <%= render @projects %>
    <% end %>
  </div>
</div>
